<iframe src="/api/v1/files/<%= id %>" frameborder="0" class="iframe"></iframe>
<div class="form-container p-5">
    <h3 class="mt-3">Оставить оценку</h3>
    <form id="upload-form">
        <div class="input-group w-50 mt-4">
            <span class="input-group-text">Комментарий</span>
            <textarea name="comment" class="form-control " aria-label="Comment" required maxlength="255"></textarea>
        </div>

        <div class="input-group mt-3 w-50">
            <span class="input-group-text">Оценка</span>
            <input name="mark" type="number" class="form-control" aria-label="Mark" placeholder="1 - 5" required min="1" max="5">
            <input name="id" value="<%= id %>" class="display-none">
        </div>
        
        <button type="button" class="btn btn-outline-success mt-3 btn-upload">Отправить</button>

        <div class="result-container mt-3">

        </div>
    </form>
</div>